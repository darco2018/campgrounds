<% include ../partials/header.ejs %>

<div class="container">
  <header class="jumbotron">
    <h1>Welcome to Expressdish!</h1>
    <p>View our handpicked dishes from the whole world</p>
    <p>
      <!-- Remember about root slash in href -->
      <a class="btn btn-info btn-sm" href="/dishes/new"
        >Add new dish</a
      >
    </p>
  </header>
  <div class="row">
    <div class="card-deck">
      <% dishes.forEach((dish) =>{ %>
      <div class="col-md-6 col-xl-4 mb-3">
        <div class="card p-1">
          <img src="<%= dish.image %>" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title"><%= dish.name %></h5>
            <a
              class="btn btn-outline-info btn-sm"
              href="/dishes/<%= dish.id %>"
              >Details</a
            >
          </div>
          <div class="card-footer">
            <small class="text-muted">Last updated 3 mins ago</small>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

  <% include ../partials/footer.ejs %>
</div>
<!-- end page container -->
