<% include ../partials/header.ejs %>

<h1 class="mt-3 mb-5 text-center">Edit the campground</h1>

<div class="container text-center col-9 col-sm-8 col-md-6 col-lg-5 col-xl-4">
  <form
    action="/campgrounds/<%= campground.id%>/update?_method=PUT"
    method="post"
  >
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="name"
        value="<%= campground.name%>"
      />
    </div>
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="image"
        value="<%= campground.image%>"
      />
    </div>
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="desc"
        value="<%= campground.description%>"
      />
    </div>
    <div class="form-group">
      <button class="btn btn-primary btn-block w-50 mx-auto" type="submit">
        Submit changes
      </button>
    </div>
  </form>
</div>

