<% include ../partials/header.ejs %>

<h1 class="text-center my-3">Edit the comment</h1>

<div class="container text-center col-9 col-sm-8 col-md-6 col-lg-5 col-xl-4">
  <form action="/dishes/<%= dishId %>/comments/<%= comment.id %>/update?_method=PUT" method="post">
    <div class="form-group">
      <textarea class="form-control" name="comment[text]" rows="8" required><%= comment.text %>
      </textarea>
    </div>

    <div class="form-group">
      <button class="btn btn-primary btn-block w-50 mx-auto" type="submit">
        Submit changes
      </button>
    </div>
  </form>
</div>

