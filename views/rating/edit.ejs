<% include ../partials/header %>
<h1 class="text-center my-3">Rating <%= dish.name %></h1>

<div class="row">
    <div class="container text-center col-9 col-sm-8 col-md-6 col-lg-5 col-xl-4">
        <div>

            <form action="<%= dish.url%>/ratings/<%= rating.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <div class="mx-auto" style="width: 200px">
                        <div class="text-left"><label for="rating">Rate the dish:</label>
                        </div>
                        <fieldset class="form-group text-left" id="rating">
                            <div>
                                <input type="radio" id="first-rate5" name="rating[score]" value="5"
                                    <% if (rating.score === 5) { %> checked <% } %> />
                                <label for="first-rate5" title="5 stars - Amazing">
                                    <%- '<span class="fa fa-star checked"></span>'.repeat(5) %>
                                </label>
                            </div>
                            <div>
                                <input type="radio" id="first-rate4" name="rating[score]" value="4"
                                    <% if (rating.score === 4) { %> checked <% } %> />
                                <label for="first-rate4" title="4 stars - Very good">
                                    <%- '<span class="fa fa-star checked"></span>'.repeat(4) %>
                                </label>
                            </div>
                            <div>
                                <input type="radio" id="first-rate3" name="rating[score]" value="3"
                                    <% if (rating.score === 3) { %> checked <% } %> />
                                <label for="first-rate3" title="3 stars - Average">
                                    <%- '<span class="fa fa-star checked"></span>'.repeat(3) %>
                                </label>
                            </div>
                            <div>
                                <input type="radio" id="first-rate2" name="rating[score]" value="2"
                                    <% if (rating.score === 2) { %> checked <% } %> />
                                <label for="first-rate2" title="2 stars - Not good">
                                    <%- '<span class="fa fa-star checked"></span>'.repeat(2) %>
                                </label>
                            </div>
                            <div>
                                <input type="radio" id="first-rate1" name="rating[score]" value="1"
                                    <% if (rating.score === 1) { %> checked <% } %> />
                                <label for="first-rate1" title="1 star - Terrible">
                                    <%- '<span class="fa fa-star checked"></span>'.repeat(1) %>
                                </label>
                            </div>

                        </fieldset>
                    </div>
                </div>
                <!--  <div class="form-group">
                    <textarea class="form-control" type="text" name="rating[text]"
                        placeholder="Write a rating for this rating..." rows="10"><%= rating.text %></textarea>
                </div> -->
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit changes</button>
                </div>
            </form>
            <div class="my-3">
                <a class="btn btn-default text-primary" href="<%= dish.url%>">
                    <i class="fa fa-arrow-left"></i>
                    Go back
                </a>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>