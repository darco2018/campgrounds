<% include partials/header.ejs %>

<h1 class="mt-3 mb-5 text-center">Add a campground</h1>

<div class="container text-center col-9 col-sm-8 col-md-6 col-lg-5 col-xl-4">
    <form action="/campgrounds" method="post">
        <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="name">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="image url">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="desc" placeholder="description">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block w-50 mx-auto" type="submit">Add campground</button>
        </div>
    </form>
    <a href="/">Go back</a><br><br>
</div>

